<!-- BattleShip.App/Components/Game.razor -->
@inject HttpClient Http
@inject GameState GameState

<h3>Grille du joueur</h3>
<table>
    @for (int i = 0; i < GameState.PlayerGrid.GetLength(0); i++)
    {
        <tr>
            @for (int j = 0; j < GameState.PlayerGrid.GetLength(1); j++)
            {
                <td>@(GameState.PlayerGrid[i, j] == '\0' ? "" : GameState.PlayerGrid[i, j].ToString())</td>
            }
        </tr>
    }
</table>

<h3>Grille de l'adversaire</h3>
<table>
    @for (int i = 0; i < GameState.OpponentGrid.GetLength(0); i++)
    {
        <tr>
            @for (int j = 0; j < GameState.OpponentGrid.GetLength(1); j++)
            {
                <td>
                    @if (GameState.OpponentGrid[i, j] == true)
                    {
                        <img src="hit.png" alt="Touché" />
                    }
                    else if (GameState.OpponentGrid[i, j] == false)
                    {
                        <img src="miss.png" alt="Raté" />
                    }
                </td>
            }
        </tr>
    }
</table>
